<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/text_size_small"
    android:paddingBottom="@dimen/text_size_small"
    android:layout_gravity="center_vertical"
    android:background="?selectItem">
    <com.innovattic.font.FontTextView
        android:id="@+id/dl_row_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        style="@style/DialogRow"
        android:gravity="center_vertical" />

    <RadioButton
        android:id="@+id/dl_row_rd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible"
        android:checked="true"
        android:buttonTint="?textColorNumberPad"
        android:gravity="center"/>
</LinearLayout>
