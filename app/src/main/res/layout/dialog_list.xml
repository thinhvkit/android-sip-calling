<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical">

    <com.innovattic.font.FontEditText
        android:id="@+id/dl_title"
        style="@style/EditText"
        android:textColor="?textColorNumberPad"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_hint"
        android:layout_weight="5"
        android:clickable="false"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        app:flunderlineHeight="0" />

    <View style="@style/DialogLine" />

    <ListView
        android:id="@+id/dl_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="?rDivider"
        android:dividerHeight="0.2dp"></ListView>
</LinearLayout>
