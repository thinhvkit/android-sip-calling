<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="?selectItem"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/dialog_contact_row_imgv"
        android:layout_width="@dimen/contact_row_imgv_avatar"
        android:layout_height="@dimen/contact_row_imgv_avatar"
        android:scaleType="fitXY"
        android:src="@drawable/unknown_contact" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.innovattic.font.FontTextView
                android:id="@+id/dialog_contact_row_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:textColor="?numberPadStyle"
                android:textSize="@dimen/text_size_title" />

            <com.innovattic.font.FontTextView
                android:id="@+id/dialog_contact_row_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:textColor="?numberPadStyle"
                android:textSize="@dimen/text_size_detail" />

            <com.innovattic.font.FontTextView
                android:id="@+id/dialog_contact_row_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:textColor="?numberPadStyle"
                android:textSize="@dimen/text_size_detail" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/dialog_contact_row_chk"
                android:layout_width="match_parent"
                android:theme="@style/MyCheckBox"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
