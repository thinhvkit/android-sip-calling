<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appBackground"
    android:orientation="vertical">

    <com.innovattic.font.FontTextView
        android:id="@+id/alert_dialog_tvTitle"
        style="@style/DialogTitle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <View style="@style/DialogLine" />

    <com.innovattic.font.FontTextView
        android:id="@+id/alert_dialog_tvMessage"
        style="@style/DialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <com.innovattic.font.FontEditText
        android:id="@+id/alert_dialog_edMessage"
        style="@style/DialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/dialogEditText"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:visibility="gone"
        app:flunderlineColor="@color/selector_color_dialog_ed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@color/dialogListDivider"
        android:paddingTop="1dp">

        <TextView
            android:id="@+id/alert_dialog_btnYes"
            style="@style/DialogMessage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_keypad"
            android:clickable="true"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/dialogYESButtonText" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dialogListDivider" />

        <TextView
            android:id="@+id/alert_dialog_btnNo"
            style="@style/DialogMessage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_keypad"
            android:clickable="true"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/dialogNOButtonText" />
    </LinearLayout>
</LinearLayout>
