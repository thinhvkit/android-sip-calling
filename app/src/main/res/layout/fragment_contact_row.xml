<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectItem"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/fm_contact_row_imgv_avatar"
        android:layout_width="@dimen/contact_row_imgv_avatar"
        android:layout_height="@dimen/contact_row_imgv_avatar"
        android:scaleType="fitXY"
        android:src="@drawable/unknown_contact" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.innovattic.font.FontTextView
                android:id="@+id/fm_contact_row_name"
                style="@style/ContactRow.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:maxLines="1" />

            <com.innovattic.font.FontTextView
                android:id="@+id/fm_contact_row_phone"
                style="@style/ContactRow.Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:maxLines="1" />

            <com.innovattic.font.FontTextView
                android:id="@+id/fm_contact_row_date"
                style="@style/ContactRow.Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:maxLines="1" />

            <com.innovattic.font.FontTextView
                android:id="@+id/fm_contact_row_datausage"
                style="@style/ContactRow.Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fm_contact_row_imgv_more"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top|center_horizontal">

                <ImageView
                    android:id="@+id/fm_contact_row_imgv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/incoming" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?ic_action" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
