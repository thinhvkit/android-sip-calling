<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?appBackground"
    tools:context="com.ccsidd.rtone.fragments.ContactFragment">


    <com.ccsidd.rtone.view.AutoInflateLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header is above ListView -->
        <include
            layout="@layout/padding" />

        <!-- Header and Footer are automatically added to ListView -->
        <com.ccsidd.rtone.observers.ObservableListView
            android:id="@+id/list_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="?rDivider"
            android:dividerHeight="0.2dp" />

        <!-- Footer is below ListView -->
        <include layout="@layout/footer_view" />

    </com.ccsidd.rtone.view.AutoInflateLayout>

</FrameLayout>
